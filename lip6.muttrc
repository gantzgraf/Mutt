color status cyan default

unmy_hdr *                      # remove all extra headers first.
my_hdr From: RaphaÃ«l Fournier <raphael.fournier@lip6.fr>
set status_format = "[ Folder: %f, Msgs: %m%?n? New: %n?%?d? Del: %d?%?t? Tag: %t?%?l? %l? ]%?p?---- .: %p waiting to send :. ?--%>--(%s/%S)-- (%P) ---"
set from      = "raphael.fournier@lip6.fr"
set sendmail  = "/usr/bin/msmtp -a lip6"
set mbox      = "+Lip6/Archives"
set record    = "+Lip6/Sent"
set postponed = "+Lip6/Drafts"
set signature = "~/.mutt/lip6.signature"                           # my signature file

macro pager,index A "<save-message>+Lip6/Archives<enter>"               "archive message"
macro pager,index E "<change-folder>+Lip6/Archive<enter><limit>~B " "search everything"
macro pager,index D "<save-message>+Lip6/Trash<enter>"              "move message to the trash"
macro pager,index ,p "<save-message>+Lip6/Archives/2011/Perso<enter>"              "archive perso message"
macro pager,index ,a "<change-folder>=Lip6/Archives/2010/Antipaedo<enter>"              ""

